<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.reservasmedicasmobile">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_rmm"
        android:label="Reservas Medicas Mobile"
        android:roundIcon="@mipmap/ic_logo_rmm"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReservasMedicasMobile"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Lista de actividades -->
        <activity
            android:name=".especialidades"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pacientes"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".menudeopciones"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".medicos"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".servicios"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".turnos"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".contacto"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".dashboard"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registro"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MisturnosDashboard"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
